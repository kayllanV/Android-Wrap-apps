<?xml version='1.0' encoding='utf-8'?>
<widget id="com.casino.mate" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CasinoMate</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="language.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
		<Splash Density="Land- hdpi" src="res/drawable/landscape.png" />
    <Splash Density="Land-ldpi" src="res/drawable/land.png" />
    <Splash Density="Land-mdpi" src="res/drawable/land.png " />
    <Splash Density="Land-xhdpi" src="res/drawable/land.png" />
    <Splash Density="Port-hdpi" src="res/drawable/port.png" />
    <Splash Density="Port-ldpi" src="res/drawable/port.png" />
    <Splash Density="Port-mdpi" src="res/drawable/port.png" />
    <Splash Density="Port-xhdpi" src="res/drawable/port.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
	<preference  name = "SplashScreenDelay"  value = "5000"  />
</widget>
